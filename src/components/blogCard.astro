---
const { title, img, desc, url } = Astro.props;
---

<div class="p-4 md:w-1/3">
  <a href={url} aria-label={title}>
    <div class="h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden">
      <img width="1600" height="480" class="lg:h-48 md:h-36 w-full h-auto object-cover object-center" src={img} alt={title} />
      <div class="p-6">
        <h2 class="title-font text-lg font-medium text-gray-900 mb-3">{title}</h2>
        <p class="leading-relaxed mb-3">
          {desc}
        </p>
      </div>
    </div>
  </a>
</div>

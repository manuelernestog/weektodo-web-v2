---
import BaseLayout from "./BaseLayout.astro";

const {
  content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props;
---

<BaseLayout title={title} description={description} image={heroImage}>
  <div class="container mx-auto">
    <div class="flex flex-col text-center w-full mb-8 pt-20">
      <h1 class="text-4xl font-bold title-font mb-4 text-gray-900 lg:w-2/3 mx-auto">{title}</h1>
      <p class="text-gray-500">{pubDate}</p>
    </div>

    <article class="prose lg:prose-xl m-auto mb-16">
      {heroImage && <img class="my-6" src={heroImage} alt={title} />}
      <slot />
    </article>
  </div>
</BaseLayout>

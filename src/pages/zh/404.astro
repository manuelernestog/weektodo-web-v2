---
import i18next, { t, changeLanguage } from "i18next";
import BaseLayout from "../../layout/BaseLayout.astro";

changeLanguage("zh");
---

<BaseLayout title={t("404.title")} description={t("404.description")}>
  <section class="text-gray-600 body-font">
    <div class="container lg:px-16 px-5 pt-16 pb-8 mx-auto">
      <div class="flex flex-col text-center w-full mb-8">
        <h1 class="text-4xl font-bold title-font text-gray-900 mb-3">
          {t("404.title")}
        </h1>
        <div class="m-auto my-5 text-gray-400 ">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="10em"
            height="10em"
            preserveAspectRatio="xMidYMid meet"
            viewBox="0 0 24 24"
            ><path
              fill="currentColor"
              d="M11.66 7H15v1a1 1 0 0 0 2 0V7h1a1 1 0 0 1 1 1v3h-1.34a1 1 0 0 0 0 2H19v1.34a1 1 0 1 0 2 0V8a3 3 0 0 0-3-3h-1V4a1 1 0 0 0-2 0v1h-3.34a1 1 0 0 0 0 2Zm10.05 13.29l-1.6-1.6l-16.4-16.4a1 1 0 0 0-1.42 1.42l1.91 1.9A3 3 0 0 0 3 8v10a3 3 0 0 0 3 3h12a3 3 0 0 0 1.29-.3l1 1a1 1 0 0 0 1.42 0a1 1 0 0 0 0-1.41ZM5 8a1 1 0 0 1 .66-.93L9.59 11H5Zm1 11a1 1 0 0 1-1-1v-5h6.59l6 6Z"
            ></path>
          </svg>
        </div>
        <p class="lg:mx-32">{t("404.description")}</p>
      </div>
    </div>
  </section>
</BaseLayout>

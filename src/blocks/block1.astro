---
import { t } from "i18next";
---
<section class="text-gray-600 body-font">
  <div class="container mx-auto lg:px-16 px-5 flex pt-10 md:flex-row flex-col items-center">
    <div class="order-2 md:order-1 lg:max-w-lg lg:w-full md:w-1/2 w-5/6 mb-10 md:mb-0">
      <img class="object-cover w-full h-auto object-center rounded" alt="weektodo feature" src="/Splash-v2-1.webp" />
    </div>
    <div class="order-1 md:order-2 lg:flex-grow md:w-1/2 lg:pl-24 md:pl-16 flex flex-col md:items-start md:text-left items-center text-center">
      <h2 class="title-font sm:text-4xl text-3xl mb-4 font-extrabold text-gray-900">
        {t("home.block1_title")}
      </h2>
      <p class="mb-8 leading-relaxed">
        {t("home.block1_desc")}
      </p>
    </div>
  </div>
</section>

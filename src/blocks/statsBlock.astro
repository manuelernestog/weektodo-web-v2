---
import { t } from "i18next";
---

<section class="text-gray-600 body-font bg-gray-50">
  <div class="container mx-auto lg:px-16 px-5 py-14">
    <div class="flex flex-wrap -m-4 text-center">
      <div class="p-4 sm:w-1/3 w-1/2">
        <h2 class="title-font font-medium sm:text-4xl text-3xl text-gray-900">16K+</h2>
        <p class="leading-relaxed">{t("home.direct_downloads")}</p>
      </div>
      <div class="p-4 sm:w-1/3 w-1/2">
        <h2 class="title-font font-medium sm:text-4xl text-3xl text-gray-900">90+</h2>
        <p class="leading-relaxed">{t("home.countries")}</p>
      </div>
      <div class="p-4 sm:w-1/3 w-full">
        <h2 class="title-font font-medium sm:text-4xl text-3xl text-gray-900">300+</h2>
        <p class="leading-relaxed">{t("home.github_stars")}</p>
      </div>
    </div>
  </div>
</section>

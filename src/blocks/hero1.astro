---
import { t } from "i18next";
import { localizePath } from "astro-i18next";
---

<div class="bg-gray-50">
  <section class="container mx-auto lg:px-10 px-5 text-gray-600 body-font">
    <div class="mx-auto flex pt-16 md:pt-28 pb-0 items-center justify-center flex-col">
      <div class="text-center w-full">
        <h1 class="title-font sm:text-6xl text-4xl mb-5 font-extrabold text-gray-900 px-5">
          {t("home.the_minimalist")}
          <span class="gradient-text">{t("home.weekly_planner")}</span>
          <br />
          {t("home.focused")}
          <span id="typed" class="gradient-text"></span>
          <div id="hero-alternative-text">
            <p>{t("home.efectivennes")}</p>
            <p>{t("home.simplicity")}</p>
            <p>{t("home.privacy")}</p>
          </div>
        </h1>
        <p class="mb-8 leading-relaxed lg:w-1/2 mx-auto">
          {t("home.hero_subtitle")}
        </p>
        <div class="flex justify-center">
          <a
            href={localizePath("/download")}
            class="inline-flex text-white bg-sky-700 border-0 py-2 px-6 focus:outline-none hover:bg-sky-800 rounded text-lg"
            >{t("home.download_now")}</a
          >
          <a
            href="https://app.weektodo.me/"
            class="ml-4 inline-flex text-gray-700 bg-gray-100 border-0 py-2 px-6 focus:outline-none hover:bg-gray-200 rounded text-lg"
            >{t("ui.get_started")}</a
          >
        </div>
      </div>
    </div>
    <img class="px-2 object-center mx-auto relative" alt="hero" src="/weektodo-preview.webp" />
  </section>
</div>

<script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12" is:inline></script>
<script is:inline>
  var typed = new Typed("#typed", {
    stringsElement: "#hero-alternative-text",
    typeSpeed: 55,
    showCursor: true,
    backDelay: 1000,
    backSpeed: 15,
    onComplete: (arrayPos, self) => {
      document.querySelector(".typed-cursor").style.display = "none";
    },
  });
</script>

<style is:global>
  .gradient-text {
    -webkit-background-clip: text !important;
    -webkit-text-fill-color: transparent;
    background: linear-gradient(135deg, #655d99, #352e7a);
  }
</style>
